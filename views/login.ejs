            // –û—Ç–∫–ª—é—á–µ–Ω–∏–µ –ø–æ–ª—è –ø–∞—Ä–æ–ª—è –ø—Ä–∏ –≤—ã–±–æ—Ä–µ —á–µ–∫–±–æ–∫—Å–∞ "–Ø –≤–≤–µ–¥—É –ø–∞—Ä–æ–ª—å –ø–æ–∑–∂–µ"
            document.addEventListener('DOMContentLoaded', function () {
                const laterCheckbox = document.getElementById('laterCheckbox');
                const passwordInput = document.getElementById('floatingPassword');
                if (laterCheckbox) {
                    function togglePassword() {
                        if (laterCheckbox.checked) {
                            passwordInput.disabled = true;
                            passwordInput.value = '';
                        } else {
                            passwordInput.disabled = false;
                        }
                    }
                    laterCheckbox.addEventListener('change', togglePassword);
                    togglePassword();
                }
            });
        </script>
