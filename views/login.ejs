<%-include('header',{ title:'Вход' });-%>

    <link rel="stylesheet" href="/css/signin.css">
    </head>

    <body class="text-center">
        <main class="form-signin">
            <%-include('alert');-%>
            <div class="bg-white rounded-3 shadow-sm p-4">
                <form action="" method="POST">
                    <h1 class="h3 mb-3 fw-normal">Пожалуйста, войдите в систему.</h1>

                    <div class="form-floating">
                        <input type="login" class="form-control" id="floatingInput" placeholder="login" name="_login">
                        <label for="floatingInput">Логин</label>
                    </div>
                    <div class="form-floating">
                        <input type="password" class="form-control" id="floatingPassword" placeholder="password"
                            name="_password">
                        <label for="floatingPassword">Пароль</label>
                    </div>
                    <button class="w-100 btn btn-lg btn-primary" type="submit"><i class="bi bi-door-open-fill"></i>&nbsp;Войти</button>
                </form>
            </div>
        </main>
    </body>

    <%-include('footer');-%>